#!/bin/sh
set -euf

cat<<EOF > src/SUMMARY.md
# SUMMARY

* [Rust Programming Guidebook](src/topics/introductions/rust-programming-guidebook.md)

EOF

<README.md awk '/^## /{p=1}{if(p){print}}' | 
sed '/^## .*/d; s/^### /# /;' >> src/SUMMARY.md

mdbook build

mv book/pdf/output.pdf book/rust-programmer-guidebook.pdf
rmdir book/pdf
open book/rust-programmer-guidebook.pdf
